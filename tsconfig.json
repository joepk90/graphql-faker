{
  "compilerOptions": {
    "target": "ESNext", // Keep it ESNext for modern JavaScript features
    "module": "commonjs", // Output in CommonJS format
    "moduleResolution": "node", // Resolve modules like Node.js
    "esModuleInterop": true,       // Ensures compatibility with ES modules
    "allowSyntheticDefaultImports": true, // Allow default imports from modules with no default export
    "forceConsistentCasingInFileNames": true,
    "strict": true,                // Enable strict type-checking options
    "skipLibCheck": true,          // Skip library checks for faster builds
    "resolveJsonModule": true,
    "noEmit": true,
    "lib": ["ES2022"], 
    "rootDir": "src",
    "baseUrl": "./src",
    "outDir": "dist",
    "paths": {
      "src/*": ["*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
