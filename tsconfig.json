{
  "compilerOptions": {
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "target": "ESNext",
    "noImplicitAny": false, // TODO update to true (update missing types)
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "pretty": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "lib": ["es2017"],
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",         
    "paths": {
      "src/*": ["src/*"]
    },
  },
  "compileOnSave": false,
  "exclude": ["src/editor", "node_modules"],
  "include": ["./src"]
}
